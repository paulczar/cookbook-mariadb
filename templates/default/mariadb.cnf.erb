# MariaDB-specific config file.
# Read by /etc/mysql/my.cnf
# Generated by Chef for <%= node['hostname'] %>.

[client]
# Default is Latin1, if you need UTF-8 set this (also in server section)
default-character-set = <%= node['mariadb']['tunable']['character-set-server'] %>

[mysqld]
# * Character sets
# Default is Latin1, if you need UTF-8 set all this (also in client section)
character-set-server = <%= node['mariadb']['tunable']['character-set-server'] %>
collation-server     = <%= node['mariadb']['tunable']['collation-server'] %>
character_set_server = <%= node['mariadb']['tunable']['character-set-server'] %>
collation_server     = <%= node['mariadb']['tunable']['collation-server'] %>
